<Window x:Class="Template_Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template_Login"
        mc:Ignorable="d"
                Title="MainWindow" Height="210" Width="335" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="login_btn" Content="Login" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" Width="211" Click="login_btn_Click"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="50,37,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="user_txt" HorizontalAlignment="Left" Margin="153,45,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="50,79,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="pass_txt" HorizontalAlignment="Left" Margin="153,87,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
